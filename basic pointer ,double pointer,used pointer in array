//pointer 
#include<bits/stdc++.h>
using namespace std;
void increment(int  *n){
   (*n)++;
}
int main(){
    int x=8;
    // cin>>x;
    // cout<<&x;
x=10*x;



//pointer store the address of the variable of int.
// represent as int ptr=*x;
//ptr=&x;(give the address of the variable )
// *p_x(give the exact the value of the variable )
// p_x givve add and * give variable

int *p_x;
p_x=&x;
cout<<"Add of &x:"<<&x<<"\n";
cout<<"val of P_x: "<< p_x<<endl;
cout<<"val of *p_x: "<<*p_x<<endl;
x=54;
cout<<"*p_x:"<<*p_x<<endl;
// p_x=p_x+1;
cout<<"new add of P_x :"<<p_x+1<<endl;

//double pointer
int **p_p_x=&p_x;
cout<<"Add of p_p_x::"<<&p_x<<endl;
cout<<"Val of p_p_x::"<<p_p_x<<endl;
cout<<"Val of *p_P_x::"<<*p_p_x<<endl;
cout<<"Val of **p_P_x::"<<**p_p_x<<endl;
 // array through pointer
 int a[10];
 a[0]=10;
 a[1]=12;
 a[2]=16;
 cout<<"Add of a::"<<a<<endl;
 cout<<"value of &a::"<<&a[0]<<endl;
 cout<<"value of *a[0]"<<*a<<endl;
 cout<<"Add of (a+1)::"<<a+1<<endl;
 cout<<"val of &(a+1)::"<<&a[1]<<endl;
 cout<<"val of *(a+1)::"<<*(a+1)<<endl;
 cout<<"Add of (a+2)::"<<a+2<<endl;
 cout<<"val of &(a+2)::"<<&a[2]<<endl;
 cout<<"val of *(a+2)::"<<*(a+2)<<endl;
 //pointer in function
 int pp4=85;
 increment (&pp4);
 cout<<pp4<<endl;

}

